<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="../static/css/admin.css">
  <title>Admin</title>
</head>

<body>

  <div class="container py-5">
    <%- include("adminNavbar") -%>

      <div class="row">
        <div class="col-sm-2 mt-1">
          <a href="/admin/add" class="btn btn-primary col-12">
            Add Item
          </a>
        </div>
        <div class="col-sm-10 mt-1">
          <div class="input-group">
            <input class="form-control" type="text">
            <div class="input-group-append">
              <button class="btn btn-outline-secondary" type="button">Search</button>
            </div>
          </div>
        </div>
      </div>
      <% links.forEach((link)=> {%>
        <section class="py-3">
          <!-- #MENU -->
          <div class="row justify-content-evenly mb-3">
            <div class="col-md-12 col-xl-12">
              <div class="card shadow-0 border rounded-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-4 col-lg-2 col-xl-2 mb-4 mb-lg-0">
                      <div class="thumbnail">
                        <img src="<%= link.Image %>" class="thumb-post img img-responsive full-width rounded" />
                      </div>
                    </div>
                    <div class="col-md-6 col-lg-8 col-xl-8 my-auto">
                      <!-- Judul -->
                      <h5>
                        <%= link.Title %>
                      </h5>
                      <!-- HARGA -->
                      <h6>Price :
                        <% if(link.Price.Value){ %>
                          <b>
                            <%= link.Price.Currency%>
                              <%= link.Price.Value %>
                          </b>
                          <% } else {%>
                            <b>-</b>
                            <% } %>
                      </h6>
                      <!-- URL -->
                      <h6>URL:
                        <a target="_blank" rel="noopener noreferrer" href="<%= link.URL %>>">
                          <%= link.URL %>
                        </a>
                      </h6>
                    </div>
                    <div class="col-md-6 col-lg-2 col-xl-2 border-sm-start-none border-start">
                      <div class="d-flex flex-column align-content-end mt-4 my-auto">
                        <input class="btn btn-primary btn-sm" type="button"
                          onclick="location.href='/admin/edit/<%= link.id %>'" value="Edit" />

                        <form action="/api/delete/<%= link.id %>" method="post">
                          <button class="btn btn-danger mt-2 w-100" type="submit">Delete</button>
                        </form>
                        <!-- <input class="btn btn-danger btn-sm mt-2" type="button"
                        onclick="location.href='/api/delete/<%= link.id %>'" value="Delete" /> -->
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% }) %>

        </section>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>
</body>

</html>